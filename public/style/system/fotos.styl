.foto
  &__link
    text-decoration none
    &:hover
      text-decoration none
  &__item
    display block
    height 280px
    box-shadow: 0 1px 2px 0 rgba(0,0,0,0.5);
    margin-bottom 20px
    border-radius 2px
    &__img
      width 100%
      height 190px
    &__boxDescription
      padding 10px
      height 60px
    &__nombre
      font-weight bold
      font-size 14px
      color #616161
      margin-top 0rem
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
    &__boxBtns
      padding 0px
  &__modalImg
    display block
    &__boxInput
      width 100%
      display inline-block
      text-align center
      &__input
        display inline-block !important
        height auto
        width 30%
        color: transparent;
        padding: 0px;
        border: 0rem;
        margin-top: 10px;


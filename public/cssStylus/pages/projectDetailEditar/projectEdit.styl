//css para el menu de editar proyecto
.boxUlEditarProyecto
  margin-top 10px

.ulEditarProyecto
  display flex
  justify-content space-between

.ulEditarProyecto li
  border none !important
  &:hover
    border none !important

.ulEditarProyecto li a
  color $colorText
  font-weight 500
  border none !important
  &:hover
    border none !important

.ulEditarProyecto li.active a
  border-top none
  border-left none
  border-right none
  border-bottom 2px solid $colorNaranja !important
  border-radius 0px
  font-weight bold
  &:hover
    border-top none
    border-left none
    border-right none
    border-bottom 2px solid $colorNaranja !important
    background white

.contentEditarProyecto
  width 100%
  padding-top 20px

.detalle-formato
  padding 0rem
  margin-bottom 80px

.box-formato
  width 100%
  height 100%
  border-radius 4px
  border-style 1px solid $borderBtnStar

.box-content
	height auto

.texto
	padding 4px
	background #fff


.tab-content
  padding-left: 0rem !important
  padding-right: 0rem !important

.c-principal
  border: 1px solid darkgrey;
  border-radius 4px
  height: 100%
  &-box
    padding-top 1rem
    padding-bottom 1rem
  &-t-unsm
    text-align center
    font-size 20px
    padding 1rem
    font-weight bold
    text-transform uppercase
  &-t-facul
    text-align center
    font-size 16px
    padding 1rem
    text-transform uppercase
    margin-top 0rem
    margin-bottom 0rem
  &-t-escue
    text-align center
    font-size 16px
    margin-top 0rem
    padding 1rem
    text-transform uppercase
  &-t-otro
    text-align center
    font-size 17px
    padding 1rem
    font-weight bold
  &-box-logo
    text-align center
    &__img
      height 200px
      width 195px
  &-box-t-tesis
    margin-left 2rem
    margin-right 2rem
    padding 1rem
    border 1px solid lightgrey
    border-radius 4px
    &-text
      text-align center
      text-transform uppercase
      font-size 13px
      line-height 20px
      letter-spacing .3px

  &-t-name-alum
    text-align center
    padding 1rem
    font-size 14px
    text-transform uppercase
    letter-spacing .2px

.item-content
  padding-left 1rem
  padding-right 1rem
  padding-top 1.5rem
  &-title
    text-transform uppercase
    text-align left
    font-size 17px
  &-body
    padding-top 1rem
    &-item
      text-align left
      padding-bottom 1rem
    &-t
      font-weight 500
      font-size 13px
    &-box
      border 1px solid lightgrey
      padding .5rem
      height 100px
      overflow-y auto
      border-radius 1%
    &__btn
      font-size 10px
      margin-left 10px

.textSinAsesor
  font-size 14px
  text-transform none
  color $colorInpSearchHeader
  &__btn
    text-transform none
    font-weight bold



//  css  footer editar proyecto
.boxProgressFooter
  margin-top 15px
  padding 0rem
  &__content
    background rgba(7,187,255,0.22)

.btnFooter__guardar
  margin-right 10px




@import "timeline.styl"
@import "projectEditModal.styl"



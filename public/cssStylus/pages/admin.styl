.boxAdminPrincipal
  text-align center
  padding-left 30px
  padding-top 50px
  &__boxImage
    display inline-block;
    padding 2rem
  &__img
    width 250px
    height 250px

.boxProjects
  border-radius 4px
  border 1px solid $borderBtnStar
  margin-bottom 25px
  &__head
    background $backgrondBtnStar
    padding 3px
    &__tittle
      font-weight 600
      padding-left 10px
      display inline-block
      padding-right 10px
    &__cantidad
      display inline-block
      width 29px
      text-align center
      font-size 11px
      border-radius 8px
      background #93979C
      color white
      padding-top 3px
      padding-bottom 3px
    &__btnNuevo
      display: inline-block
      float right
      margin-top 5px
      margin-right 5px
      padding-top 3px
      padding-bottom 3px
      font-size: 11px
      font-weight bold

  &__item
    border-top 1px solid $borderBtnStar
    padding-left 10px
    padding-right 10px
    &__nameProject
      display inline-block
      padding-left 5px
      margin-bottom 5px
      width 235px
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    &__ancla
      color $colorTitleProject
      text-transform uppercase
      font-size 13px
      &:hover
        text-decoration none
        color $colorTitleProject
    &__anclaFavourite
      color $colorTitleProject
      text-transform uppercase
      font-size 13px
      font-weight bold
      &:hover
        text-decoration none
        color $colorTitleProject

    &__iconBook
      float left
      margin-top 12px
    &__iconStar
      float: right
      margin-top: 10px
      color $colorFavorito

.resumenGeneral
  padding-top 180px
  &__btns
    width 170px
    margin-bottom 20px
    font-weight bold
  &__btnRetroceder
    margin-top: 40px;
    margin-left: 15px;
    color: blue;
    font-weight: bold
  &__iconRetroceder
    font-size: 24px;
  &__spanRetroceder
    position absolute
    top 5px
    padding-left 7px
    font-size 11px !important





.menuIndicators
  display block
  padding-left 40px
  &__item
    font-size 14px
    margin-top 15px
  &__ancla
    color black !important
    &:hover
      text-decoration none
    &-active
      font-weight bold
      color #19BAC0 !important
      margin-top 15px
      &:hover
        text-decoration none

.box_grafico
  width 100%
  height 420px
  &__title
    margin-top 10px
    font-size 15px
    color black
    text-align center
    font-weight bold

.itemFacultad
  height 260px
  &__name
    text-align center
    font-weight bold
    margin-top 0rem
    font-size 13px
    line-height 20px



.resumenEscuela
  display block
  &__ancla
    text-decoration none
    &:hover
      text-decoration none
  &__nameEscuela
    margin-top 50px
    font-size 15px
    text-transform uppercase
    text-align center
    cursor pointer
  &__numberProject
    margin-top 10px
    font-size 12px
    text-align center
    color grey
  &__boxGrafico
    height 200px





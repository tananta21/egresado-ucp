.boxPerfil
  @extends .anulPadding

.boxList
  @extends .anulPadding
.boxImg
  @extends .anulPadding
  width 95%
  &__perfil
    width 100%
    height 230px
    border-radius 10px

  &__boxInfo
    width 100%
    &_name
      font-size 17px
      @extends .normal
    &_tipoUser
      font-size 16px
      text-align justify
      font-weight 300
      color $colorText
    &_line
      margin-bottom 0rem
      width 100%;
      margin-top 0rem !important
      border solid 1px $colorLine

  &__boxContactPerfil
    width 100%
    margin-top 30px
    &__ancla
      display block
      text-align left
      text-decoration none
      color $colorText
      margin-bottom 8px
      font-size 13px
      &:hover
        text-decoration none
    &__icon
      padding-right 7px !important
      font-size 16px !important
      color $colorTitleProject
  &__boxLogosPerfil
    width 100%
    margin-top 20px
    margin-bottom 60px
    &__logos
      width 60px
      height 60px
      margin-right 10px

.boxContentList
  @extends .anulPadding
  margin-bottom 100px
  &__numProjects
    display inline-block
    width 29px
    text-align center
    font-size 11px
    border-radius 8px
    background #ededee
  &__btnRefresh
    height: 25px;
    margin-top: 10px;
    margin-left: 10px;
    padding-top: 0rem;
    padding-bottom: 0rem;
    border: none;
    font-size: 18px

.boxFormList
  text-align center
  @extends .anulPadding
  &__inpSelect
    display inline-block
    width 80%
    text-align center
  &__spanPressEnter
    display none
    float left
    font-weight bold
    padding-top 2px
    padding-left 2px
  &__btnNuevo
    float right
    width 100%
    font-weight bold

.boxProject
  @extends .anulPadding
  padding-top 15px
  border-bottom 1px solid $colorLine
  &__itemTittle
    text-align: justify
    margin: 0rem
    line-height .9
  &__name
    font-size 15px
    width 100%
    color $colorTitleProject
    text-transform uppercase
    &:hover
      text-decoration none
      color $colorTitleProject
  &__items
    font-size 13px
    color $colorText
    cursor default
  &__cargo
    display inline-block
    max-width 90px
    padding 4px
    margin-right 5px
    border 1px solid $colorBorderCargo
    border-radius 4px
    color $colorText
    font-size 8px
    font-weight bold
    cursor default
    text-align center
  &__tipo_proyecto
    margin-bottom 10px
    display inline-block
    margin-right 5px
    font-size 10px
  &__tipo_proyecto > span
    padding-top 5px
    padding-bottom 5px
  &__asignacion
    font-size 10px
    margin-bottom 10px
    display inline-block
  &__asignacion > span
    padding-top 5px
    padding-bottom 5px

.boxPagination
  text-align center
.boxEmptyProjects
  padding-top 80px
  text-align center
  &__icon
    color $colorInpSearchHeader
    font-size 100px
    font-weight 300
  &__description
    margin-top 20px
    text-align center
    color $colorInpSearchHeader
  &__btnNuevo
    font-weight bold










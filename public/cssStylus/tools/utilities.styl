.anulPadding
  padding-left 0rem
  padding-right 0rem

.anulPaddingLeft
  padding-left 0rem

.anulPaddingRight
  padding-right 0rem

.center
  text-align center !important
.bold
  font-weight bold
.normal
  font-weight 600
.light
  font-weight 300

.label-aprobado
  background purple

.btn-morado
  border-radius 4px
  border none
  background red !important
  font-size 16px
  font-weight bold
  color white
  transition .5s
  &:hover
    color white
    background red !important
    border none !important


.isVisible
  display block !important

.notVisible
  display none !important


input[type=checkbox] {
  width: 15px;
  height: 15px;
  cursor: pointer;
  font: 14px/1em sans-serif;
  background-color:#0b0095;
}


input[type=checkbox]:after {
  content: " ";
  background-color: white;
  color $colorNaranja
  display: inline-block;
  visibility: visible;
  text-align center
  border .5px solid lightgrey
}

input[type=checkbox]:checked:after {
  content: "\2714";
  height 100%
  width 100%
}

//css loading

.loader {
  position: fixed;
  left: 0px;
  top: 30%;
  bottom 0;
  width: 100%;
  height: 70%;
//z-index: 9999;
  z-index: 1050;
  background: url('../../static/img/utils/loading.gif') 50% 50% no-repeat rgb(249, 249, 249);
  opacity: 4;
}

.loading
  position absolute !important
  z-index: 1050 !important
  width: 100% !important
  height 90%
  background $blanco !important
  text-align center !important
  &__img
    height: 50px !important
    width: 50px !important
    margin-top 250px !important



//css favourite button
.spanBtnFavorite
  margin-left 25px
  font-weight bold

.rating {
  border: none;
  float: left;
  position absolute
  top -0px
}

.rating > input { display: none; }
.rating > label:before {
  margin: 5px;
  font-size: 1.25em;
  font-family: FontAwesome;
  display: inline-block;
  content: "\f005";
}

.rating > .half:before {
  content: "\f089";
  position: absolute;
}

.rating > label {
  //color: #ddd;
  float: right;
  font-size 13px;
}

